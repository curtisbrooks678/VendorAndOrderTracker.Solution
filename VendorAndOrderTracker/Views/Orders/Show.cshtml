@{
  Layout = "_Layout";
}

<h1>Order Details: </h1>

<h3>Order Title: @Model["order"].Title</h3>
<h3>Order Description: @Model["order"].Description</h3>
<h3>Order Price: @Model["order"].Price</h3>
<h3>Order Date: @Model["order"].Date</h3>

<h3>Vendor: @Model["vendor"].Name</h3>
<h3><a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a></h3>
<h3><a href='/vendors/@Model["vendor"].Id'>View current vendor</a></h3>
<h3><a href='/vendors'>View all vendors</a></h3>
<h3><a href='/'>Return to Main Page</a></h3>